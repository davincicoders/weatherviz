<% provide(:title, full_name(@user)) %>
</div>
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="span6">
        <%- model_class = User -%>
        <h1>
          <%= gravatar_for @user %>
          <%= full_name(@user) %>
        </h1>
      </div>
      <div class="search span6" >
        <%= render 'locations/search_form' %>
      </div>
    </div>
  </div>
</div>
<div class="main-content">
  <div class="container">

    <div class="row">
      <div class="about span12" >

        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
          <dd><%= @user.first_name %></dd>
          <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
          <dd><%= @user.last_name %></dd>
          <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
          <dd><%= @user.email %></dd>

          <% if current_user.present? && current_user.admin? %>
              <dt><strong><%= model_class.human_attribute_name(:ip_address) %>:</strong></dt>
              <dd><%= @user.ip_address %></dd>
              </dl>
          <% end %>

          <div class="form-actions">
            <%= link_to t('.back', :default => t("helpers.links.back")),
                        users_path, :class => 'btn'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_user_path(@user), :class => 'btn' %>
          </div>

          </div>
    </div>
  </div>
</div>