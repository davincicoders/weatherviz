<% provide(:title, 'Rule') %>
</div>

<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="span6">
        <%- model_class = Rule -%>
        <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
      </div>
    </div>
  </div>
</div>

<div class="main-content">
  <div class="container">
    <div class="row">
      <div class="about span12" >
        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:field) %>:</strong></dt>
          <dd><%= @rule.field %></dd>
          <dt><strong><%= model_class.human_attribute_name(:operator) %>:</strong></dt>
          <dd><%= @rule.operator %></dd>
          <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
          <dd><%= @rule.value %></dd>
        </dl>

        <div class="form-actions">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_rule_path(@rule), :class => 'btn' %>
          <%= link_to t('.back', :default => t("helpers.links.back")),
                      @rule.alert, :class => 'btn'  %>
        </div>
      </div>
    </div>
  </div>
</div>