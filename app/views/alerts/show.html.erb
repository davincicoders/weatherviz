<% provide(:title, 'Home') %>
</div>

<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="span6">
        <%- model_class = Alert -%>
        <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
      </div>
    </div>
  </div>
</div>

<div class="main-content">
  <div class="container">

    <div class="row">
      <div class="about span12" >

        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
          <dd><%= @alert.active %></dd>
          <dt><strong><%= model_class.human_attribute_name(:alert_name) %>:</strong></dt>
          <dd><%= @alert.alert_name %></dd>
          <dt><strong>Cell phone:</strong></dt>
          <dd><%= @alert.sms %></dd>
          <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
          <dd><%= @alert.email %></dd>
          <dt><strong>Send SMS:</strong></dt>
          <dd><%= @alert.by_sms %></dd>
          <dt><strong>Send email:</strong></dt>
          <dd><%= @alert.by_email %></dd>
          <dt><strong><%= model_class.human_attribute_name(:email_verified) %>:</strong></dt>
          <dd><%= @alert.email_verified %></dd>
          <dt><strong><%= model_class.human_attribute_name(:phone_verified) %>:</strong></dt>
          <dd><%= @alert.phone_verified %></dd>
        </dl>
        <br>
        <div class="form-actions">
          <%= link_to t('.back', :default => t("helpers.links.back")),
                      alerts_path, :class => 'btn' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_alert_path(@alert), :class => 'btn' %>
          <%= link_to 'Logs', logs_alert_path(@alert), :class => 'btn' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      alert_path(@alert),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger' %>
        </div>

        <%= render partial: 'alerts/rules', member: @alert.rules %>

      </div>
    </div>
  </div>
</div>