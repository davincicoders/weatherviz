<% provide(:title, "Log in") %>
<h1>Log in</h1>

<p><strong>Log in through one of these services:</strong></p>

<div class="'auth_providers">
  <%= link_to image_tag('octocat.png', size: '64x64'), '/auth/github' %>
  <%= link_to image_tag('google.png', size: '64x64'), '/auth/google_oauth2' %>
  <%= link_to image_tag('facebook.png', size: '64x64'), '/auth/facebook' %>
</div>
<div>
  <p><strong>Don't use these services? Log in below.</strong></p>
  <%= form_tag login_path do %>
      <p>
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </p>

      <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </p>

      <p class="button">
        <%= submit_tag 'Login' %>
      </p>
  <% end %>
</div>